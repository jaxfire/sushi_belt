<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/arc_top_segment"
        android:layout_width="362dp"
        android:layout_height="225dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="362dp"
            android:layout_height="225dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/shape_arc_grey" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/shape_arc_white" />

    </RelativeLayout>

    <View
        android:layout_width="156dp"
        android:layout_height="290dp"
        android:background="@color/sushiBeltBackground"
        android:layout_alignLeft="@id/arc_top_segment"
        android:layout_below="@id/arc_top_segment" />

    <View
        android:layout_width="156dp"
        android:layout_height="290dp"
        android:background="@color/sushiBeltBackground"
        android:layout_alignRight="@id/arc_top_segment"
        android:layout_below="@id/arc_top_segment" />

</RelativeLayout>